extends ../layout

block content
  .container
    include ../include/menu
    .row
      .col-md-5.col-md-offset-3
        h2.text-center 注册  
    .row
      .col-md-5.col-md-offset-3
        form.for-horzotal(method="POST",action="/signup")
          .form-group.clearfix
            label.col-sm-2.control-label(for="acount") 帐号
            .col-sm-10
              input#acount.form-control(type="text",name="user[name]")
          .form-group.clearfix
            label.col-sm-2.control-label(for="password") 密码
            .col-sm-10
              input#password.form-control(type="text",name="user[password]")
          .modal-footer.text-center
            button.btn.btn-primary(type="submit") 提交
